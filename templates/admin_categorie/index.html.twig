{% extends 'base-backend.html.twig' %}

{% block title %}Index des Categories{% endblock %}

{% block body %}

{% for label, messages in app.flashes() %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}" role="alert">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<div class="d-flex flex-wrap justify-content-between align-items-center">
    <h1>Index des Categories</h1>
    <a href="{{ path('app_admin_categorie_new') }}" class="btn btn-success"><i class="align-middle" data-feather="plus"></i></a>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>ImageName</th>
                <th>Description</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.title }}</td>
                <td>{{ categorie.imageName }}</td>
                <td>{{ categorie.description|raw }}</td>
                <td>{{ categorie.slug }}</td>
                <td>
                    
                    <a href="{{ path('app_admin_categorie_show', {'id': categorie.id}) }}"class="btn btn-warning"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}"class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
