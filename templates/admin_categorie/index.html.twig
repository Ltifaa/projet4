{% extends 'base-backend.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>ImageName</th>
                <th>Description</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.title }}</td>
                <td>{{ categorie.imageName }}</td>
                <td>{{ categorie.description }}</td>
                <td>{{ categorie.slug }}</td>
                <td>
                    
                    <a href="{{ path('app_admin_categorie_show', {'id': categorie.id}) }}"class="btn btn-warning"><i class="aligin-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}"class="btn btn-success"><i class="aligin-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_categorie_new') }}">Create new</a>
{% endblock %}
