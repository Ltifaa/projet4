{% extends 'base-backend.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}

  <a href="{{ path('app_admin_categorie_index') }}" class="btn btn-dark mb-3">Retour</a>
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ categorie.title }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ categorie.imageName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorie.description }}</td>
            </tr>
            <tr>
                <th>Slug</th>
