{% extends 'base-backend.html.twig' %}

{% block title %}Video index{% endblock %}

{% block body %}
    <h1>Video index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>UpdatedAt</th>
                <th>Time</th>
                <th>Sponsor</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for video in videos %}
            <tr>
                <td>{{ video.id }}</td>
                <td>{{ video.title }}</td>
                <td>{{ video.description }}</td>
                <td>{{ video.updatedAt ? video.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ video.time ? video.time.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
                <td>{{ video.sponsor }}</td>
                <td>{{ video.slug }}</td>
                <td>
                    <a href="{{ path('app_admin_video_show', {'id': video.id}) }}">show</a>
                    <a href="{{ path('app_admin_video_edit', {'id': video.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_video_new') }}">Create new</a>
{% endblock %}
