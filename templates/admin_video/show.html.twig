{% extends 'base-backend.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}

<a href="{{ path('app_admin_video_index') }}" class="btn btn-dark mb-3">Retour</a>
    <h1>Video</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.description }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ video.updatedAt ? video.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ video.time ? video.time.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
            </tr>
            <tr>
                <th>Sponsor</th>
                <td>{{ video.sponsor }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ video.slug }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_admin_video_edit', {'id': video.id}) }}" class="btn btn-success mb-3">Modifier</a>

    {{ include('admin_video/_delete_form.html.twig') }}
{% endblock %}
