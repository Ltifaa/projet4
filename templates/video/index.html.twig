{% extends 'base.html.twig' %}

{% block title %}Nos Vidéos{% endblock %}

{% block body %}
<h1>Nos Vidéos</h1>
<style>
    h1 {
        font-family: 'Roboto';
    }
</style>

<div class="row">
{% for video in videos %}
<div class="col-12 col-md-3 col-xl-2 mb-4 " >
<div class="card bg-dark"  >
{% if video.videoName is defined  and video.videoName is not null%}
    <video controls src="{{asset ('videos/' ~ video.videoName)}}" class="card-img-top" alt="...">
    {% else %}
    <img src="{{asset ('videos/imagedefaut.jpg')}}" class="card-img-top" alt="...">
    {% endif %}
    <div class="card-body   p-4 m-4" style="background-color: #B76E79; height: 150px;font-family: 'Roboto';" >
        <a href="{{ path('app_video_show', {slug: video.slug}) }}" class="text-dark">{{ video.title }}</a>
    </div>
</div>
</div>
{% endfor %}
</div>

{% endblock %}
