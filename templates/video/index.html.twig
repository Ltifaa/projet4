{% extends 'base.html.twig' %}

{% block title %}Nos Vidéos{% endblock %}

{% block body %}
<h1 class="moncompte">Nos Vidéos</h1>


<div class="row">
<ul>
{% for categorie in categories %}
<li>{{ categorie.title}} </li>
</ul>


    {% for video in categorie.videos %}

<div class="col-12 col-md-3 col-xl-2 mb-4 " >
<div class="card bg-dark"  >
{% if video.videoName is defined  and video.videoName is not null%}
    <video controls src="{{asset ('videos/' ~ video.videoName)}}" class="card-img-top" alt="..."></video>
    <a href="{{ path('app_video_show', {slug: video.slug}) }}" class="text-dark"> {{ video.title }}</a>
    {% else %}
    <img src="{{asset ('videos/imagedefaut.jpg')}}" class="card-img-top" alt="...">
    {% endif %}
    <div class="card-body p-4 m-4" style="background-color: #B76E79;font-family: 'Roboto';" >
    <a href="{{ path('app_video_show', {slug: video.slug}) }}" class="text-dark"> {{ video.title }}</a>
    {% if app.user is not null %} 
        {% if video not in app.user.videos %}
        <a href="{{ path('app_favori', {id: video.id }) }}" class="mt-3 btn btn-dark">Ajouter aux favoris</a>
        {% endif %}
        {% endif %}
    </div>
</div>
</div>
    {% endfor %}

{% endfor %}

</div>

{% endblock %}